<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DemoViewsMilena.CambioColor">
    <ContentPage.Content>
    </ContentPage.Content>
    <StackLayout>
        <BoxView  x:Name="boxcolor"
                  BackgroundColor="Black"
                  HeightRequest="300"
                  />
        <Label Margin="25,30,0,0"
               Text="Rojo"/>
        <Slider  x:Name="slrojo"
                  Margin="15,0,0,0"
                  ValueChanged="CambiarColor"
                  />
        <Label Margin="25,30,0,0"
               Text="Azul"/>
        <Slider x:Name="slazul"
                Margin="15,0,0,0"
                ValueChanged="CambiarColor"
                />
        <Label Margin="25,30,0,0"
               Text="Verde"/>
        <Slider x:Name="slverde"
                Margin="15,0,0,0"
                ValueChanged="CambiarColor"/>
        <Label x:Name="lbDisplay"
               Text="Valor Hexadecimal"
               FontAttributes="Bold"
               FontSize="Large"/>
        </StackLayout>
</ContentPage>
